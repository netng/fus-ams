<div class="bg-slate-50 rounded-lg mt-4 mb-4 p-4 hidden" data-toggle-target="toggle">
  <%= search_form_for [:admin, @q], url: admin_site_stats_path, data: { 
    controller: "filters",
    turbo_frame: :table,
    turbo_action: "advance",
    filters_delay_value: 200,
    filters_table_outlet: ".table-site_stat"
  } do |f| %>

    <div class="flex gap-2">
      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.attributes.site_stat.id_site_stat')}", class: "fus-label" %>
        <%= f.search_field :id_site_stat_cont, data: { action: "filters#submit" }, class: "fus-input" %>
      </div>
      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.attributes.site_stat.name')}", class: "fus-label" %>
        <%= f.search_field :name_cont, data: { action: "filters#submit" }, class: "fus-input" %>
      </div>
    </div>
    
  <% end %>
</div>