<h2 class="text-2xl font-bold text-gray-600 mb-8"><%= t("custom.label.import_form") %></h2>
<%= form_with(url: process_import_admin_vendors_path, method: :post, local: true, multipart: true) do |form| %>
  <div class="flex justify-center items-center mt-8 border border-2 border-dashed  rounded-md p-8">
    <%= form.file_field :file %>
  </div>

  <div class="mt-4">
    <%= form.submit "#{t('custom.label.upload')}", class: "bg-blue-500 p-2 rounded text-white", data: { turbo_submits_with: t("custom.label.importing") } %>
    <%= link_to "#{t('custom.label.cancel')}", admin_vendors_path, class: "text-center bg-slate-100 w-full px-4 py-2 rounded hover:bg-slate-200 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-slate-300 mb-4 md:mb-0 md:w-auto" %>
  </div>
<% end %>

<% content_for(:title, t("custom.label.new_form", model: t("activerecord.models.vendor")).capitalize) %>
