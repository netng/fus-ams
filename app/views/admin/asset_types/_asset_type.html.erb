<%= tag.tr id: dom_id(asset_type), class: "border-b border-gray-200 hover:bg-gray-100" do %>
  <td class="sticky left-0 py-3 px-4 border-r border-gray-300 bg-gray-100">
    <div class="flex items-center space-x-4">
      <%= check_box_tag "asset_type_ids[]",
        asset_type.id,
        nil,
        {
          class: "form-checkbox h-5 w-5 text-blue-600 focus:ring-blue-500 rounded border-none bg-slate-300",
          multiple: true,
          form: :asset_type_table,
          data: {
            table_target: "childCheckbox",
            action: "change->table#toggleParentCheckbox"
          }
        }
       %>
      <%= link_to "#{t("custom.label.edit")}", edit_admin_asset_type_path(asset_type), data: { turbo_frame: "main-content", turbo_action: "advance" }, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </td>
  <td class="py-3 px-6 text-left whitespace-nowrap"><%= asset_type.id_asset_type %></td>
  <td class="py-3 px-6 text-left whitespace-nowrap"><%= asset_type.name %></td>
  <td class="py-3 px-6 text-left whitespace-nowrap"><%= asset_type.description.blank? ? "-" : asset_type.description %></td>
<% end %>