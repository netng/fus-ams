<%= render "layouts/turbo_modal" do %>
  <h2 class="fus-form-header mb-2 sticky top-0 p-3 z-10 bg-fus-blue text-white shadow-md ">
    <%= t("custom.label.show_detail", model: t("activerecord.models.delivery_order")).capitalize %>
  </h2>
	<div data-action="turbo:submit-end->modal#submitEnd" class="p-8">
    <div class="bg-slate-50 rounded-md">
      <div class="grid grid-cols-2 gap-2 p-4">
        <div class="mb-2">
          <label class="fus-label">
            <%= t("activerecord.attributes.delivery_order.number") %>
          </label>
          <span class="fus-readonly"><%= @delivery_order.number %></span>
        </div>

        <div class="mb-2">
          <label class="fus-label">
            <%= t("activerecord.attributes.delivery_order.purchase_order_id") %>
          </label>
          <span class="fus-readonly"><%= @delivery_order.purchase_order.blank? ? "-" : @delivery_order.purchase_order.number %></span>
        </div>

        <div class="mb-2">
          <label class="fus-label">
            <%= t("activerecord.attributes.delivery_order.date") %>
          </label>
          <span class="fus-readonly"><%= @delivery_order.date.blank? ? "-" : @delivery_order.date.strftime("%Y-%m-%d") %></span>
        </div>

        <div class="mb-2">
          <label class="fus-label">
            <%= t("activerecord.attributes.delivery_order.warranty_expired_date") %>
          </label>
          <span class="fus-readonly"><%= @delivery_order.warranty_expired.blank? ? "-" : @delivery_order.warranty_expired.strftime("%Y-%m-%d") %></span>
        </div>
      </div>

      <div class="mb-2 p-4">
        <label class="fus-label">
          <%= t("activerecord.attributes.delivery_order.description") %>
        </label>
        <span class="fus-readonly"><%= @delivery_order.description.blank? ? "-" : @delivery_order.description %></span>
      </div>
    </div>

    <%= button_tag t("custom.label.cancel"),
      data: { action: "modal#hideModal" },
      class: "fus-secondary-btn md:w-[100px] mt-2"
    %>
    
	</div>
<% end %>


<% content_for(:title, t("custom.label.new_form", model: t("activerecord.models.delivery_order")).capitalize) %>