<% if turbo_frame_request_id == "modal"%>
  <%= render "shared/flash" %>
  
  <%= render "layouts/turbo_modal" do %>
    <h2 class="fus-form-header mb-2 sticky top-0 p-3 z-20 bg-fus-blue text-white shadow-md">
      <%= t("custom.label.edit_location_form", model: t("activerecord.models.asset")).capitalize %>
    </h2>
    <div class="p-8">
      <%= render "edit_location_form", asset: @asset %>
    </div>
  <% end %>
  
<% else %>

  <%= render "layouts/turbo_second_modal" do %>
    <%= render "shared/flash" %>

    <h2 class="fus-form-header mb-2 sticky top-0 p-3 z-20 bg-fus-blue text-white shadow-md">
      <%= t("custom.label.edit_location_form", model: t("activerecord.models.asset")).capitalize %>
    </h2>
    <div class="p-8">
      <%= render "edit_location_form", asset: @asset %>
    </div>
  <% end %>
  
<% end %>


<% content_for(:title, t("custom.label.edit_location_form", model: t("activerecord.models.asset")).capitalize) %>