<div class="bg-slate-50 rounded-lg mt-4 mb-4 p-4 hidden" data-toggle-target="toggle">
  <%= search_form_for [:admin, @q], url: admin_components_path, data: { 
    controller: "filters",
    turbo_frame: :table,
    turbo_action: "advance",
    filters_delay_value: 200,
    filters_table_outlet: ".table-component"
  } do |f| %>

    <div class="flex flew-wrap md:flex md:flew-nowrap gap-2">

      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.attributes.component.id_component')}", class: "fus-label" %>
        <%= f.search_field :id_component_cont, data: { action: "filters#submit" }, class: "fus-input" %>
      </div>

      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.attributes.component.name')}", class: "fus-label" %>
        <%= f.search_field :name_cont, data: { action: "filters#submit" }, class: "fus-input" %>
      </div>

      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.models.component_type')}", class: "fus-label" %>
        <%= f.select :component_type_id_eq,
          ComponentType.pluck(:name, :id).map { |name, id| [name.capitalize, id]},
          {include_blank: t("custom.label.all", model: t("activerecord.models.component_type")).capitalize},
          data: { action: "filters#submit", controller: "slim" },
          class: "fus-select"
        %>
      </div>
    </div>
    
  <% end %>
</div>