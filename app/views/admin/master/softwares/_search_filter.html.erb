<div class="bg-slate-50 rounded-lg mt-4 mb-4 p-4" data-toggle-target="toggle">
  <%= search_form_for [:admin, @q], url: admin_softwares_path, data: { 
    controller: "filters",
    turbo_frame: :table,
    turbo_action: "advance",
    filters_delay_value: 200,
    filters_table_outlet: ".table-software"
  } do |f| %>

    <div class="flex flew-wrap md:flex md:flex-nowrap gap-2">
      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.attributes.software.id_software')}", class: "fus-label" %>
        <%= f.search_field :id_software_cont, data: { action: "filters#submit" }, class: "fus-input" %>
      </div>

      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.attributes.software.name')}", class: "fus-label" %>
        <%= f.search_field :name_cont, data: { action: "filters#submit" }, class: "fus-input" %>
      </div>
    </div>
    
  <% end %>
</div>