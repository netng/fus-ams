<%= render "layouts/turbo_modal" do %>
  <h2 class="fus-form-header mb-2 sticky top-0 p-3 z-10 bg-fus-blue text-white shadow-md ">
    <%= t("custom.label.show_detail", model: t("activerecord.models.component_type")).capitalize %>
  </h2>
	<div data-action="turbo:submit-end->modal#submitEnd" class="px-8 py-2">
    <div class="bg-slate-50 rounded-md">
      <div class="grid grid-cols-2 gap-2 p-4">
        <div class="mb-2">
          <label class="fus-label">
            <%= t("activerecord.attributes.component_type.id_component_type") %>
          </label>
          <span class="fus-readonly"><%= @component_type.id_component_type %></span>
        </div>

        <div class="mb-2">
          <label class="fus-label">
            <%= t("activerecord.attributes.component_type.name") %>
          </label>
          <span class="fus-readonly"><%= @component_type.name %></span>
        </div>
      </div>

      <div class="mb-2 p-4">
        <label class="fus-label">
          <%= t("activerecord.attributes.component_type.description") %>
        </label>
        <span class="fus-readonly"><%= @component_type.description.blank? ? "-" : @component_type.description %></span>
      </div>
      
    </div>

    <%= button_tag t("custom.label.cancel"),
      data: { action: "modal#hideModal" },
      class: "fus-secondary-btn md:w-[100px] mt-2"
    %>
    
	</div>
<% end %>


<% content_for(:title, t("custom.label.new_form", model: t("activerecord.models.component_type")).capitalize) %>