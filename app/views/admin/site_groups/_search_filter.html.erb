<div class="bg-slate-50 rounded-lg mt-4 mb-4 p-4 hidden" data-toggle-target="toggle">
  <%= search_form_for [:admin, @q], url: admin_site_groups_path, data: { 
    controller: "filters",
    turbo_frame: :table,
    turbo_action: "advance",
    filters_delay_value: 200,
    filters_table_outlet: ".table-site_group"
  } do |f| %>

    <div class="flex flex-wrap md:flex md:flex-nowrap gap-2">

      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.attributes.site_group.id_site_group')}", class: "block text-gray-700" %>
        <%= f.search_field :id_site_group_cont, data: { action: "filters#submit" }, class: "w-full border border-gray-300 rounded px-4 py-2 mt-1 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.attributes.site_group.name')}", class: "block text-gray-700" %>
        <%= f.search_field :name_cont, data: { action: "filters#submit" }, class: "w-full border border-gray-300 rounded px-4 py-2 mt-1 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="w-full mb-2">
        <%= f.label "#{t('activerecord.models.project')}", class: "block text-gray-700" %>
        <%= f.select :project_id_eq,
          Project.pluck(:name, :id).map { |name, id| [name.capitalize, id]},
          {include_blank: t("custom.label.all", model: t("activerecord.models.project")).capitalize},
          data: { 
            action: "filters#submit",
            controller: "slim"
          },
          class: "w-full border border-gray-300 rounded px-4 py-2 mt-1 focus:outline-none focus:ring-2 focus:ring-blue-300"
        %>
      </div>
    </div>
    
  <% end %>
</div>