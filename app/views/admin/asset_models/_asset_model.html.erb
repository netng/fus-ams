<%= tag.tr id: dom_id(asset_model), class: "border-b border-gray-200 hover:bg-gray-100" do %>
  <td class="sticky left-0 py-3 px-4 bg-white border-r border-gray-300">
    <div class="flex items-center space-x-4">
      <%= check_box_tag "asset_model_ids[]",
        asset_model.id,
        nil,
        {
          class: "form-checkbox h-5 w-5 text-blue-600 focus:ring-blue-500 rounded border-none bg-slate-200",
          multiple: true,
          form: :asset_model_table,
          data: {
            table_target: "childCheckbox",
            action: "change->table#toggleParentCheckbox"
          }
        }
       %>
      <%= link_to "#{t("custom.label.edit")}", edit_admin_asset_model_path(asset_model), data: { turbo_frame: "_top" }, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </td>
  <td class="py-3 px-6 text-left"><%= asset_model.id_asset_model %></td>
  <td class="py-3 px-6 text-left"><%= asset_model.name %></td>
  <td class="py-3 px-6 text-left"><%= asset_model.brand.name %></td>
  <td class="py-3 px-6 text-left"><%= asset_model.asset_type.name %></td>
  <td class="py-3 px-6 text-left"><%= asset_model.asset_item_type.name %></td>
  <td class="py-3 px-6 text-left"><%= asset_model.description.blank? ? "-" : asset_model.description %></td>
<% end %>