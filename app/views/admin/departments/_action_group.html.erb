<div data-controller="toggle">
  <div class="mb-4 flex w-full justify-between gap-2">
    <button data-action="click->toggle#toggle" id="toggleSearchForm" class="bg-slate-200 text-gray-600 px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-200">
      <%= t("custom.label.filter") %>
    </button>
    <div class="flex gap-2">
      <%= link_to "#{t("custom.label.new_form", model: t("activerecord.models.department"))}",
        new_admin_department_path,
        class: "bg-blue-500 text-white px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-300"
      %>

      <%= link_to "#{t("custom.label.import_form", model: t("activerecord.models.department"))}",
        import_admin_departments_path,
        class: "bg-green-200 text-gray-600 px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-green-300"
      %>
    </div>
  </div>

  <%= render "search_filter" %>
</div>