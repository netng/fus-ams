<div data-controller="toggle">
  <div class="mb-4 flex w-full justify-between gap-2">

    <button 
      data-action="click->toggle#toggle" 
      id="toggleSearchForm" 
      class="bg-slate-200 text-gray-600 px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-200">

      <%= t("custom.label.filter") %>
      
    </button>

    <div class="flex gap-2">
      <%= link_to "#{t("custom.label.default_new_form", 
        model: t("activerecord.models.component_type"))}",
        new_admin_component_type_path,
        data: {
          turbo_action: "advance"
        },
        class: "bg-blue-400 text-white px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-300"
      %>

      <%= link_to "#{t("custom.label.import_form", model: t("activerecord.models.component_type"))}",
        import_admin_component_types_path,
        data: {
          turbo_action: "advance"
        },
        class: "bg-green-200 text-gray-600 px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-green-300"
      %>
    </div>

    
  </div>

  <%= render "search_filter" %>
</div>