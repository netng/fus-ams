<%= form_with model: [:admin, request_for_purchase], data: { turbo_action: "advance" } do |form| %>

  <div class="md:grid grid-cols-2 gap-2">
    <div class="mb-2">
      <%= form.label :number, "#{t("activerecord.attributes.request_for_purchase.number")} *", class: "block text-sm font-medium text-gray-500 mb-2" %>
      <%= form.text_field :number, class: "block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
      <% @request_for_purchase.errors.full_messages_for(:number).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>

    <div class="mb-2">
      <%= form.label :capital_proposal, "#{t("custom.label.cost_log_number")}", class: "block text-sm font-medium text-gray-500 mb-2" %>
      <%= form.select :capital_proposal_id,
        CapitalProposal.pluck(:number, :id).map { |number, id| [number.capitalize, id]},
        {include_blank: t("custom.label.select", model: t("activerecord.models.capital_proposal")).capitalize},
        { data: { controller: "slim" }, class: "p-2 rounded-lg" }
      %>
      <% @request_for_purchase.errors.full_messages_for(:capital_proposal).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>
  
    <div class="mb-2">
      <%= form.label :from_department, "#{t("custom.label.from_department")} *", class: "block text-sm font-medium text-gray-500 mb-2", required: true %>
      <%= form.select :from_department_id,
        Department.pluck(:name, :id).map { |name, id| [name.capitalize, id]},
        {include_blank: t("custom.label.select", model: t("activerecord.models.department")).capitalize},
        { data: { controller: "slim" }, class: "p-2 rounded-lg" }
      %>
      <% @request_for_purchase.errors.full_messages_for(:from_department).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>

    <div class="mb-2">
      <%= form.label :to_department, "#{t("custom.label.to_department")} *", class: "block text-sm font-medium text-gray-500 mb-2", required: true %>
      <%= form.select :to_department_id,
        Department.pluck(:name, :id).map { |name, id| [name.capitalize, id]},
        {include_blank: t("custom.label.select", model: t("activerecord.models.department")).capitalize},
        { data: { controller: "slim" }, class: "p-2 rounded-lg" }
      %>
      <% @request_for_purchase.errors.full_messages_for(:to_department).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>
    
    <div class="mb-2">
      <%= form.label :date, "#{t("activerecord.attributes.request_for_purchase.date")} (yyyy-mm-dd) *", class: "block text-sm font-medium text-gray-500 mb-2", required: true %>
      <%= form.text_field :date, class: "block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
      <% @request_for_purchase.errors.full_messages_for(:date).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>
  
    <div class="mb-2">
      <%= form.label :material_code, "#{t("activerecord.attributes.request_for_purchase.material_code")} *", class: "block text-sm font-medium text-gray-500 mb-2", required: true %>
      <%= form.text_field :material_code, class: "block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
      <% @request_for_purchase.errors.full_messages_for(:material_code).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>

    <div class="mb-2">
      <%= form.label :remarks, "#{t("activerecord.attributes.request_for_purchase.remarks")}", class: "block text-sm font-medium text-gray-500 mb-2" %>
      <%= form.text_field :remarks, class: "block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
      <% @request_for_purchase.errors.full_messages_for(:remarks).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>

    <div class="mb-2">
      <%= form.label :issued_by, "#{t("activerecord.attributes.request_for_purchase.issued_by")}", class: "block text-sm font-medium text-gray-500 mb-2" %>
      <%= form.text_field :issued_by, class: "block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
      <% @request_for_purchase.errors.full_messages_for(:issued_by).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>

    <div class="mb-2">
      <%= form.label :authorized_by, "#{t("activerecord.attributes.request_for_purchase.authorized_by")}", class: "block text-sm font-medium text-gray-500 mb-2" %>
      <%= form.text_field :authorized_by, class: "block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
      <% @request_for_purchase.errors.full_messages_for(:authorized_by).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>

    <div class="mb-2">
      <%= form.label :status, "#{t("activerecord.attributes.request_for_purchase.status")}", class: "block text-sm font-medium text-gray-500 mb-2" %>
      <%= form.select :status,
        [["Open", "Open"], ["Closed", "Closed"]],
        {},
        { data: { controller: "slim" }, class: "p-2 rounded-lg" }
      %>
      <% @request_for_purchase.errors.full_messages_for(:status).each do |message| %>
        <p class="text-red-500 text-sm mt-1"><%= message %></p>
      <% end %>
    </div>

  </div>

  <hr class="my-4 mx-6" />
  <div class="mb-4 flex justify-between items-center">
    <div>Request for purchase details</div>
    <div>
      <%= link_to "Add details", 
        new_admin_request_for_purchase_path(add_rfp_details: :add_rfp_details),
        data: { turbo_frame: "add_rfp_details"},
        class: "bg-blue-400 w-full text-white px-4 py-2 rounded hover:bg-blue-600 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-300 mb-4 md:mb-0 md:w-auto" 
      %>
    </div>
  </div>

  <div class="bg-slate-50 p-2 overflow-x-auto rounded-lg">
    <div class="min-w-full bg-white rounded-lg overflow-x-auto max-h-[500px]">
      <table class="min-w-full bg-white table-auto">
        <thead class="rounded-lg">
          <tr class="bg-gray-200 text-xs text-gray-600 uppercase text-sm text-left leading-normal">
            <th class="sticky top-0 left-0 py-3 px-4 w-5 bg-gray-200 z-10">
              <div class="flex items-center space-x-2">
              </div>
            </th>

            <th class="sticky top-0 py-3 px-2 bg-gray-200 z-10 whitespace-nowrap">
              <%= t("activerecord.attributes.request_for_purchase_detail.qty") %>
            </th>

            <th class="sticky top-0 py-3 px-2 bg-gray-200 z-10 whitespace-nowrap">
              <%= t("activerecord.attributes.request_for_purchase_detail.tentative_date") %>
            </th>

            <th class="sticky top-0 py-3 px-2 bg-gray-200 z-10 whitespace-nowrap">
              <%= t("activerecord.attributes.request_for_purchase_detail.confirm_date") %>
            </th>

            <th class="sticky top-0 py-3 px-2 bg-gray-200 z-10 whitespace-nowrap">
              <%= t("activerecord.attributes.request_for_purchase_detail.specs") %>
            </th>

            <th class="sticky top-0 py-3 px-2 bg-gray-200 z-10 whitespace-nowrap">
              <%= t("activerecord.attributes.request_for_purchase_detail.currency") %>
            </th>

            <th class="sticky top-0 py-3 px-2 bg-gray-200 z-10 whitespace-nowrap">
              <%= t("activerecord.attributes.request_for_purchase_detail.rate") %>
            </th>

            <th class="sticky top-0 py-3 px-2 bg-gray-200 z-10 whitespace-nowrap">
              <%= t("activerecord.attributes.request_for_purchase_detail.price") %>
            </th>

            <th class="sticky top-0 py-3 px-2 bg-gray-200 z-10 whitespace-nowrap">
              <%= t("activerecord.attributes.request_for_purchase_detail.total") %>
            </th>
          </tr>
        </thead>
        <tbody class="text-gray-600 text-sm font-light" id="rfp_details">

          <%= turbo_frame_tag :add_rfp_details do %>
            

            <%= turbo_stream.append :rfp_details do %>
              <%= form.fields_for :request_for_purchase_details, child_index: -> { Process.clock_gettime(Process::CLOCK_REALTIME, :microsecond) } do |rfp_detail_form| %>
    
                <tr class="border-b border-gray-200 hover:bg-gray-100">

                  <td class="sticky left-0 py-3 px-4 border-r border-gray-300 bg-gray-100">
                    <%= inline_svg_tag "trash.svg", class: "w-5 h-5 text-slate-400" %>
                  </td>

                
                  <td class="py-2 px-2 text-left whitespace-nowrap">
                    <%= rfp_detail_form.number_field :qty, class: "block text-xs w-[60px] p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
                    <% @request_for_purchase.errors.full_messages_for(:qty).each do |message| %>
                      <p class="text-red-500 text-sm mt-1"><%= message %></p>
                    <% end %>
                  </td>
    
                  <td class="py-3 px-2 text-left whitespace-nowrap">
                    <%= rfp_detail_form.text_field :tentative_date, class: "block text-xs w-[90px] p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
                    <% @request_for_purchase.errors.full_messages_for(:tentative_date).each do |message| %>
                      <p class="text-red-500 text-xs mt-1"><%= message %></p>
                    <% end %>
                  </td>
    
                  <td class="py-3 px-2 text-left whitespace-nowrap">
                    <%= rfp_detail_form.text_field :confirm_date, class: "block text-xs w-[90px] p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
                    <% @request_for_purchase.errors.full_messages_for(:confirm_date).each do |message| %>
                      <p class="text-red-500 text-xs mt-1"><%= message %></p>
                    <% end %>
                  </td>
    
                  <td class="py-3 px-2 text-left whitespace-nowrap">
                    <%= rfp_detail_form.text_field :specs, class: "block text-xs w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
                    <% @request_for_purchase.errors.full_messages_for(:specs).each do |message| %>
                      <p class="text-red-500 text-xs mt-1"><%= message %></p>
                    <% end %>
                  </td>
    
                  <td class="py-3 px-2 text-left whitespace-nowrap">
                    <%= form.select :currency_id, Currency.pluck(:name, :id).map { |name, id| [name, id]}, {}, { data: { controller: "slim" }, class: "w-[70px] p-2 rounded-lg text-xs font-bold"} %>
                    <% @request_for_purchase.errors.full_messages_for(:currency).each do |message| %>
                      <p class="text-red-500 text-xs mt-1"><%= message %></p>
                    <% end %>
                  </td>
    
                  <td class="py-3 px-2 text-left whitespace-nowrap">
                    <%= rfp_detail_form.number_field :rate, class: "block text-xs w-[80px] p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
                    <% @request_for_purchase.errors.full_messages_for(:rate).each do |message| %>
                      <p class="text-red-500 text-xs mt-1"><%= message %></p>
                    <% end %>
                  </td>
    
                  <td class="py-3 px-2 text-left whitespace-nowrap">
                    <%= rfp_detail_form.number_field :price, class: "block text-xs w-[120px] p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
                    <% @request_for_purchase.errors.full_messages_for(:price).each do |message| %>
                      <p class="text-red-500 text-xs mt-1"><%= message %></p>
                    <% end %>
                  </td>
    
                  <td class="py-3 px-2 text-left whitespace-nowrap">
                    <input type="text" class="block text-xs w-[120px] p-2 outline-none border border-gray-300 rounded-lg bg-gray-200 text-gray-500" disabled>
                      <% if request_for_purchase.persisted? && request_for_purchase.request_for_purchase_detail.persisted? %>
                        <span><%= request_for_purchase.request_for_purchase_detail.sub_total %></span>
                      <% else %>
                        <span></span>
                      <% end %>
                    </span>
                  </td>
                </tr>
              <% end %>
            <% end %>

          <% end %>
        </tbody>
      </table>
    </div>

  </div>
  
  <hr class="my-4" />

  <div class="flex flex-col md:flex-row items-center md:gap-2 mt-4">
    <%= form.submit "#{t('custom.label.save')}",
      class: "bg-blue-400 w-full text-white px-4 py-2 rounded hover:bg-blue-600 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-300 mb-4 md:mb-0 md:w-auto"
    %>

    <%= link_to "#{t('custom.label.cancel')}",
      admin_request_for_purchases_path,
      data: {
        turbo_action: "advance"
      },
      class: "text-center bg-slate-100 w-full px-4 py-2 rounded hover:bg-slate-200 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-slate-300 mb-4 md:mb-0 md:w-auto"
    %>
  </div>
<% end %>