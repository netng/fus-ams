<%= render "layouts/turbo_modal" do %>

  <h2 class="fus-form-header mb-2 sticky top-0 p-3 z-20 bg-fus-blue text-white shadow-md">
    <%= t("custom.label.report_queues", model: t("activerecord.models.asset")).capitalize %>
  </h2>

  <div class="table-report-queue mx-2" data-controller="table">
    <%= turbo_frame_tag "report-queues" do %>
      <%= render "admin/asset_management/assets/report_queues/table" %>
    <% end %>

    <% if policy([:admin, :authorization]).destroy? %>
      <%= turbo_frame_tag "destroy_button" do %>
        <%= render "admin/asset_management/assets/report_queues/destroy_button" %>
      <% end %>
    <% end %>
  </div>
<% end %>

<% content_for(:title, t("custom.label.report_queues", model: t("activerecord.models.asset")).capitalize) %>