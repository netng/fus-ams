<% asset_locations.each do |asset_location| %>
  <%= tag.tr id: dom_id(asset_location), class: "border-b border-gray-200 hover:bg-gray-100" do %>
    <td class="sticky left-0 py-3 px-4 border-r border-gray-300 bg-gray-100">
      <div class="flex items-center space-x-4">

        <%= form.radio_button :asset_location_id,
          asset_location.id,
          {
            class: "h-5 w-5 text-blue-600 focus:ring-blue-500 rounded-full border-none bg-slate-300 hover:bg-slate-400",
            title: t("custom.label.choose_asset_location")
          }
        %>

      </div>
    </td>
    <td class="py-3 px-6 whitespace-nowrap text-left"><%= asset_location.id_user_asset %></td>
    <td class="py-3 px-6 whitespace-nowrap text-left"><%= asset_location.username %></td>
    <td class="py-3 px-6 whitespace-nowrap text-left"><%= asset_location.email %></td>
    <td class="py-3 px-6 whitespace-nowrap text-left"><%= asset_location.site.name %></td>
    <td class="py-3 px-6 whitespace-nowrap text-left"><%= asset_location.department&.name %></td>
    <td class="py-3 px-6 whitespace-nowrap text-left"><%= asset_location.description.blank? ? "-" : asset_location.description %></td>
  <% end %>
<% end %>