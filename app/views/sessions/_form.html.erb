<%= form_with url: auth_sign_in_path do |form| %>
  <div class="mb-4">
    <%= label_tag :username, "#{t('custom.label.username')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= text_field_tag :username, params[:username], class: "block w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
  </div>

  <div class="mb-4">
    <%= label_tag :password, "#{t('custom.label.password')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= password_field_tag :password, params[:password], class: "block w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
  </div>

  <div class="mb-4">
    <%= submit_tag "#{t('custom.label.sign_in_anchor')}", class: "w-full bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>